<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.puffizza.fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@drawable/splash_screen">

            <LinearLayout
                android:id="@+id/profile_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/text_labelmed"
                android:orientation="vertical"
                android:padding="@dimen/text_labelmed"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/text_labelmin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="User first name: " />

                <EditText
                    android:id="@+id/edtUserfirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@null"
                    android:inputType="text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/text_labelmin"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="User last name: " />

                <EditText
                    android:id="@+id/edtUserlastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@null"
                    android:inputType="text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/text_labelmin"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="User email: " />

                <EditText
                    android:id="@+id/edtUseremail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/text_labelmin"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="User mobile: " />

                <EditText
                    android:id="@+id/edtUsermobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:inputType="phone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/text_labelmin"
                    android:background="@color/white" />

                <Button
                    android:id="@+id/btnRegistration"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/call_round"
                    android:layout_marginTop="@dimen/text_labelmed"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="update" />

            </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_labelmin"
        android:layout_gravity="top"
        android:visibility="gone"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/text_labelsml"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/aboutus"
            android:layout_margin="@dimen/text_labelsml"
            android:background="@drawable/layout_round"
            android:text="About Puffizza"
            android:textSize="@dimen/text_labelmin" />

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:drawableLeft="@drawable/contactus"
            android:layout_weight="1"
            android:padding="@dimen/text_labelsml"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_margin="@dimen/text_labelsml"
            android:background="@drawable/layout_round"
            android:text="Contact Puffizza"
            android:textSize="@dimen/text_labelmin" />

    </LinearLayout>

    <ImageView
        android:id="@+id/logout_btn"
        android:layout_width="@dimen/text_labelmax"
        android:layout_height="@dimen/text_labelmax"
        android:tint="@color/white"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/text_labelmin"
        android:layout_marginRight="@dimen/text_labelmin"
        android:padding="@dimen/text_labelsml"
        android:src="@drawable/ic_action_logout" />

</FrameLayout>
